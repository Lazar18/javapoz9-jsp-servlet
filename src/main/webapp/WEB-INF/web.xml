        <servlet-class>pl.sda.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello-world</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>CalcServlet</servlet-name>
