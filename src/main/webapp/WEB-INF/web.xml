    <servlet>
        <servlet-name>CalcFormServlet</servlet-name>
        <servlet-class>pl.sda.CalcFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CalcFormServlet</servlet-name>
        <url-pattern>/calc-form</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>BooksServlet</servlet-name>
